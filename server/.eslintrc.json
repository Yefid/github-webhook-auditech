{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 13
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		// "react/jsx-filename-extension": [
		// 	1,
		// 	{ "extensions": [".js", ".jsx", ".ts", ".tsx"] }
		// ],
		"no-underscore-dangle": "off",
		"import/extensions": [
			"error",
			"always",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	}
}
